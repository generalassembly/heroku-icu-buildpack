#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

pushd icu-src

./runConfigureICU Linux --prefix=$BUILD_DIR/icu
make
make install

popd

export BUNDLE_BUILD__CHARLOCK_HOLMES="--with-icu-lib=/app/icu/lib --with-icu-include=/app/icu/include"

#give environment to later buildpacks
export | grep -E -e ' (BUNDLE_BUILD__CHARLOCK_HOLMES)='  > "$LP_DIR/export"
